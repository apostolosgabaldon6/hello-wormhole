{
  "name": "hello-wormhole",
  "version": "1.0.0",
  "description": "Hello Wormhole Project - Cross-chain example",
  "main": "index.js",
  "repository": "git@github.com:wormhole-foundation/hello-wormhole.git",
  "author": "Wormhole Contributors",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "preinstall": "echo 'Installing dependencies...'",
    "postinstall": "echo 'Dependencies installed successfully.'",
    "prebuild": "echo 'Starting build process...'; rm -rf ./out ./ts-scripts/ethers-contracts",
    "build": "forge build && npm run typechain",
    "postbuild": "echo 'Build process completed.'",
    "typechain": "typechain --target ethers-v5 --out-dir ./ts-scripts/ethers-contracts ./out/**/*.json",
    "deploy": "npm run build && ts-node ./ts-scripts/main.ts deploy",
    "main": "ts-node ./ts-scripts/main.ts",
    "test": "jest --config ./ts-scripts/jest.config.js",
    "status": "ts-node ./ts-scripts/main.ts --getStatus",
    "clean": "rm -rf ./ts-scripts/ethers-contracts ./out ./node_modules"
  },
  "dependencies": {
    "@certusone/wormhole-sdk": "^0.10.5",
    "@improbable-eng/grpc-web-node-http-transport": "^0.15.0",
    "@typechain/ethers-v5": "^11.1.0",
    "ethers": "^5.7.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
